 #include <stdio.h>
 
 int main() {
 int n, i, sum = 0;
 
// Input the value of n
printf("Enter the value of n: ");
scanf("%d", &n);

// Using for loop
printf("Using for loop:\n");
sum = 0;
for (i = 1; i <= n; i++) {
printf("%d ", 2 * i - 1);
sum += 2 * i - 1;
}
printf("\nSum of the first %d odd natural numbers: %d\n", n, sum);

// Using while loop
printf("\nUsing while loop:\n");
i = 1;
sum = 0;
while (i <= n) {
printf("%d ", 2 * i - 1);
sum += 2 * i - 1;
i++;
}
printf("\nSum of the first %d odd natural numbers: %d\n", n, sum);

// Using do-while loop
printf("\nUsing do-while loop:\n");
i = 1;
sum = 0;
do {
printf("%d ", 2 * i - 1);
sum += 2 * i - 1;
i++;
} while (i <= n);
printf("\nSum of the first %d odd natural numbers: %d\n", n, sum);
return 0;
}


